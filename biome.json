{
  "$schema": "node_modules/@biomejs/biome/configuration_schema.json",
  "files": {
    "includes": [
      "**",
      "!**/_cjs",
      "!**/_esm",
      "!**/_types",
      "!**/.turbo",
      "!**/node_modules",
      "!**/CHANGELOG.md",
      "!**/dist",
      "!**/cache",
      "!**/tsconfig.json",
      "!**/tsconfig.*.json"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "a11y": {
        "noSvgWithoutTitle": "off",
        "useHeadingContent": "off",
        "useKeyWithClickEvents": "off",
        "useKeyWithMouseEvents": "off",
        "useButtonType": "off",
        "useValidAnchor": "off",
        "noStaticElementInteractions": "off"
      },
      "correctness": {
        "noUnusedVariables": "error",
        "noUnusedImports": "error",
        "useExhaustiveDependencies": "error"
      },
      "performance": {
        "noDelete": "off"
      },
      "style": {
        "noNonNullAssertion": "off",
        "noParameterAssign": "off",
        "noUselessElse": "off",
        "noUnusedTemplateLiteral": "off",
        "useAsConstAssertion": "error",
        "useDefaultParameterLast": "error",
        "useEnumInitializers": "error",
        "useSelfClosingElements": "error",
        "useSingleVarDeclarator": "error",
        "useNumberNamespace": "error",
        "noInferrableTypes": "error",
        "useConsistentArrayType": {
          "level": "error",
          "options": {
            "syntax": "shorthand"
          }
        },
        "noRestrictedImports": {
          "level": "error",
          "options": {
            "paths": {
              "@oogabooga/core/edenTreaty": {
                "importNames": ["edenTreaty"],
                "message": "Direct usage of edenTreaty from @oogabooga/core/edenTreaty is not allowed. Use the treaty export instead."
              }
            }
          }
        }
      },
      "suspicious": {
        "noArrayIndexKey": "off",
        "noImplicitAnyLet": "off"
      },
      "complexity": {
        "useLiteralKeys": "off",
        "noForEach": "off",
        "noStaticOnlyClass": "off",
        "noThisInStatic": "off",
        "useSimpleNumberKeys": "off"
      },
      "security": {
        "noDangerouslySetInnerHtml": "off"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "trailingCommas": "all",
      "semicolons": "asNeeded"
    }
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "overrides": [
    {
      "includes": ["apps/**", "**/*.script.ts"],
      "linter": {
        "rules": {
          "suspicious": {
            "noExplicitAny": "off"
          }
        }
      }
    },
    {
      "includes": [
        "**/*.test.ts",
        "**/*.test.tsx",
        "**/packages/db/**",
        "**/*.script.ts"
      ]
    }
  ]
}
