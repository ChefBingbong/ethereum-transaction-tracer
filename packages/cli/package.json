{
  "name": "@evm-tt/cli",
  "version": "0.0.0",
  "license": "ISC",
  "type": "module",

  "bin": {
    "evm-tt": "./dist/bin.cjs"
  },

  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],

  "scripts": {
    "clean": "rm -rf dist node_modules",
    "build": "bun run clean && bun run build:cjs",
    "build:cjs": "tsc -p tsconfig.json --module commonjs --moduleResolution node --outDir ./dist --rootDir ./src --verbatimModuleSyntax false && printf '{\"type\":\"commonjs\"}' > ./dist/package.json",
    "prepublishOnly": "bun run build"
  },

  "publishConfig": {
    "access": "public"
  },

  "dependencies": {
    "@evm-tt/tracer": "workspace:*",
    "commander": "^12.1.0",
    "picocolors": "^1.1.1",
    "viem": "^2.34.0",
    "zod": "^4.1.1"
  },

  "devDependencies": {
    "@types/bun": "latest",
    "@evm-tt/typescript-config": "workspace:*"
  },

  "engines": {
    "node": ">=22"
  }
}
