{
    "compilerOptions": {
      "module": "commonjs",
      "target": "esnext",
      "outDir": "lib",
      "rootDir": "src",
      "strict": true,
      "declaration": false,
      "sourceMap": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "skipLibCheck": true,
      "resolveJsonModule": true
    },
    "include": ["src"],
    "exclude": ["node_modules"]
  }
  