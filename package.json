{
  "name": "evm-transaction-trace",
  "workspaces": [
    "config/*",
    "packages/*",
    "docs/*",
    "playground"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ChefBingbong/ethereum-transaction-tracer.git"
  },
  "scripts": {
    "evm-tt": "node packages/cli/dist/bin.js",
    "check-types": "tsc --noEmit",
    "build": "turbo run build",
    "build:packages": "turbo run build  --filter='./packages/*'",
    "release": "bun run build:packages && bun run changeset publish",
    "playground:request": "bun run playground/src/traceTxRequest.example.ts",
    "playground:request-gas": "bun run playground/src/traceTxRequestGas.example.ts",
    "playground:tx": "bun run playground/src/traceTxHash.example.ts",
    "playground:tx-gas": "bun run playground/src/traceTxHashGas.example.ts",
    "check": "turbo run check --cache=local:r,remote:r",
    "run": "turbo watch start --filter=@evm-tt/cli",
    "clean": "turbo run clean && rm -rf node_modules",
    "lint": "biome check .",
    "lint:fix": "biome check . --write",
    "format": "biome format . --write",
    "test": "turbo run test --concurrency=100%",
    "prepare": "lefthook install"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.2",
    "@changesets/cli": "^2.29.6",
    "@types/bun": "latest",
    "lefthook": "^1.11.16",
    "turbo": "^2.5.4",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "packageManager": "bun@1.3.0"
}